{% schema %}
{
  "name": "Custom Header",
  "blocks": [
    {
      "type": "first_block",
      "name": "New Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "first_image",
          "label": "First Image"
        },
        {
          "type": "text",
          "id": "first_text",
          "label": "First Text",
          "default": "Your Text"
        },
        {
          "type": "checkbox",
          "id": "show_first_text",
          "label": "Показать текст"
        },
        {
          "type": "text",
          "id": "first_button_text",
          "label": "First Button Text",
          "default": "Перейти"
        },
        {
          "type": "checkbox",
          "id": "show_first_button",
          "label": "Показать кнопку"
        },
        {
          "type": "text",
          "id": "first_paragraph_text",
          "label": "First Paragraph Text",
          "default": "Переглянути наші речі"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Header",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .custom-catalog_container {
    display: flex;
    flex-wrap:wrap;
    
  }
 
  .custom-catalog_section {
    width: 100%;
    margin-bottom:30px;
    
  }
  .product-block {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    flex: 1;
    margin: 10px;
    padding: 20px;
    color: white;
    position: relative;
    min-height: 40rem;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    text-align: center; /* Центрирование текста */
  }
  .product-block-content {
    padding: 20px;
    position: relative;
    z-index: 1;
  }
  .product-block::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 0;
    opacity: 0.5;
  }

  .product-block h2 {
    color: white;
    margin: 0;
  }
  .button-wrapper {
    margin-top: 25rem;
  }
  .button-wrapper p {
    margin: 0;
  }
  .button-wrapper button {
 
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    background:#ffd837;
    color:black;
    font-family: Montserrat-ExtraBold;
    font-size:1.2rem;
    transition: 0.5s ease;
  }

  .button-wrapper button:hover{
    transform: scale(1.01)
  }

  .first_text{
    position:absolute;
    color:white;
    font-family: Montserrat-ExtraBold;
    font-size:3.5rem;
  }
  .custom-block{
    margin-right:30px;
    transition: 0.5s ease;
  }

  .custom-block:hover{
    transform:scale(1.01)
  }
</style>

<div class="custom-catalog_section scroll-trigger animate--slide-in">
  <div class="page-width custom-catalog_container">
    {% for block in section.blocks %}
      <div class="product-block custom-block" style="background-image: url({{ block.settings.first_image | img_url: 'master' }});">
        {% if block.settings.show_first_text %}
          <h2 class="first_text">{{ block.settings.first_text }}</h2>
        {% endif %}
        <div class="product-block-content">
          <div class="button-wrapper">
            {% if block.settings.show_first_button %}
              <p>{{ block.settings.first_paragraph_text }}</p>
              <button>{{ block.settings.first_button_text }}</button>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
